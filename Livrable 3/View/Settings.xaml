<Window x:Class="Projet.View.Settings"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Projet.View"
        mc:Ignorable="d"
        Title="Settings" Height="350" Width="500" ResizeMode="NoResize" Loaded="Window_Loaded" Background="#404040">
    <Grid>
        <Button x:Name="changeExt" Style="{StaticResource btnHover}" Content="" HorizontalAlignment="Center" VerticalAlignment="Top" Height="34" Width="250" Click="changeExt_Click" Margin="0,165,0,0"/>
        <Button x:Name="changeExtPrio" Style="{StaticResource btnHover}" Content="" HorizontalAlignment="Center" VerticalAlignment="Top" Height="34" Width="250" Click="changeExtPrio_Click" Margin="0,204,0,0"/>
        <Button x:Name="sizeMax" Style="{StaticResource btnHover}" Content="" HorizontalAlignment="Center" VerticalAlignment="Top" Height="34" Width="250" Margin="0,125,0,0" Click="sizeMax_Click"/>
        <Button x:Name="bussSoftware" Style="{StaticResource btnHover}" Content="" HorizontalAlignment="Center" VerticalAlignment="Top" Height="34" Width="250" Margin="0,86,0,0" Click="bussSoftware_Click"/>

    </Grid>
</Window>